package templates

import "strconv"

func d(i int) string {
  return strconv.Itoa(i)
}

templ Home(i int) {
        @Api(i)
        @Reset()
}

templ Reset(){
     <button
     hx-DELETE="/api/count"
     hx-trigger="click"
     hx-target="#counter"
     hx-swap="outerHTML"
     class="px-4 py-2 bg-blue-500 text-white rounded-md mr-4">Reset</button>
}

templ Api(count int) {
     <button id="counter" 
     hx-POST="/api/count"
     hx-trigger="click"
     hx-swap="outerHTML"
     class="px-4 py-2 bg-blue-500 text-white rounded-md mr-4">{ d(count) }</button>
}

templ Head(){
    <head>
    <meta charset="UTF-8"></meta>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"></meta>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10" integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC" crossorigin="anonymous"></script>
    </head>
}

templ Header(){
    <header>
    <p>Small Website Example Htmx</p>
    </header>
}

templ Footer(){
    <footer
    class="absolute bottom-0">
    <p>&copy; Julian</p>
    </footer>
}

templ Error(err string){
    <p>Error occured: { err }</p>
    <p>Go back <a href="/">Home</a></p>
}

templ About(){
    <p>This Page was made by me</p>
} 

