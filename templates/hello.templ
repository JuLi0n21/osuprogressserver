templ Navigation(){
<nav 
    hx-target="#main"
    class="bg-white shadow px-4 py-6">
    
    <ul class="flex space-x-4">
    <li><a href="#" 
            hx-get="/" 
            hx-trigger="click"
            class="text-gray-800 hover:text-gray-900">
    Home</a></li>

    <li><a href="#" 
            hx-get="/about" 
            hx-trigger="click"
            class="text-gray-800 hover:text-gray-900">
    About</a></li>

    <li><a href="#" 
            hx-get="/contact" 
            hx-trigger="click"
            class="text-gray-800 hover:text-gray-900">
    Contact</a></li>
  </ul>
</nav>
}

templ Index(){
    @Head()
    <body
    class="bg-gray-800 text-white relative">
        @Header()
        @Navigation()
            <div id="main"
            class="pb-10">
            { children... }
            </div>
        @Footer()
    </body>
}

templ Layout(content templ.Component ){
    @Index(){
        @content
    }
}